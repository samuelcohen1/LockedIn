{
  "manifest_version": 3,
  "name": "My First Chrome Extension",
  "version": "1.0",
  "description": "A basic Chrome extension",
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  },
  "permissions": [
      "identity",
      "storage",
      "tabs",
      "activeTab"
  ],
  "host_permissions": [
      "http://localhost:3000/*",
      "https://accounts.google.com/*"
  ],
  "background": {
      "service_worker": "background.js"
  }
}
